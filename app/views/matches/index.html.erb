<p id="notice"><%= notice %></p>

<h1>Matches</h1>

<b><%= link_to 'New Match', new_match_path %></b><br><br>

<table class="table table-hover table-bordered h4">
  <thead>
    <tr>
      <th>Match ID</th>
      <th>Phase</th>
      <th>Home team</th>
      <th>Goal home</th>
      <th>Aways team</th>
      <th>Goal aways</th>
      <th>Stadium</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.id %></td>
        <td class="red"><%= match.phase.name %></td>
        <td class="red"><%= match.home_team.nome %></td>
        <td><%= match.goal_home %></td>
        <td class="red"><%= match.aways_team.nome %></td>
        <td><%= match.goal_aways %></td>
        <td class="red"><%= match.stadium.nome %></td>
        <td><%= link_to 'Show', match %></td>
        <td><%= link_to 'Edit', edit_match_path(match) %></td>
        <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


