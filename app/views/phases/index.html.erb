<p id="notice"><%= notice %></p>

<h1>Phases</h1>

<table  class="table table-hover table-bordered h4">
  <thead>
    <tr>
      <th>Year</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phases.each do |phase| %>
      <tr>
        <td class="red"><%= phase.year %></td>
        <td class="red"><%= phase.name %></td>
        <td><%= link_to 'Show', phase %></td>
        <td><%= link_to 'Edit', edit_phase_path(phase) %></td>
        <td><%= link_to 'Destroy', phase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

